{% extends 'base.html.twig' %}

{% block top %}
    {{ include('nav/top.html.twig', {
        'title': 'Godziny pracy'
    }) }}
{% endblock %}

{% block body %}
    <table>
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ attendance.id }}</td>
        </tr>
        <tr>
            <th>Datecreated</th>
            <td>{% if attendance.dateCreated %}{{ attendance.dateCreated|date('Y-m-d H:i:s') }}{% endif %}</td>
        </tr>
        <tr>
            <th>Lastupdated</th>
            <td>{% if attendance.lastUpdated %}{{ attendance.lastUpdated|date('Y-m-d H:i:s') }}{% endif %}</td>
        </tr>
        <tr>
            <th>Timein</th>
            <td>{% if attendance.timeIn %}{{ attendance.timeIn|date('Y-m-d H:i:s') }}{% endif %}</td>
        </tr>
        <tr>
            <th>Timeout</th>
            <td>{% if attendance.timeOut %}{{ attendance.timeOut|date('Y-m-d H:i:s') }}{% endif %}</td>
        </tr>
        <tr>
            <th>Notes</th>
            <td>{{ attendance.notes }}</td>
        </tr>
        </tbody>
    </table>
            <a class="material-btn" href="{{ path('attendance_index') }}">Back to the list</a>
            <a class="material-btn" href="{{ path('attendance_edit', { 'id': attendance.id }) }}">Edit</a>
            {{ form_start(delete_form) }}
            <input class="material-btn" type="submit" value="Delete">
            {{ form_end(delete_form) }}
{% endblock %}
