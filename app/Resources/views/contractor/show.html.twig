{% extends 'base.html.twig' %}

{% block top %}
    {{ include('nav/top.html.twig', {
        'title': 'Kontrahent'
    }) }}
{% endblock %}

{% block body %}
    <table>
        <tbody>
        <tr>
            <th>Data utworzenia</th>
            <td>{% if contractor.dateCreated %}{{ contractor.dateCreated|date('Y-m-d H:i:s') }}{% endif %}</td>
        </tr>
        <tr>
            <th>Data aktualizacji</th>
            <td>{% if contractor.lastUpdated %}{{ contractor.lastUpdated|date('Y-m-d H:i:s') }}{% endif %}</td>
        </tr>
        <tr>
            <th>Nazwa</th>
            <td>{{ contractor.name }}</td>
        </tr>
        <tr>
            <th>VAT ID</th>
            <td>{{ contractor.vatId }}</td>
        </tr>
        </tbody>
    </table>

    <a class="material-btn" href="{{ path('contractor_index') }}">Powrót do listy</a>
    {% if is_granted('ROLE_ALLOWED_EDIT_CONTRACTOR') %}
        <a class="material-btn" href="{{ path('contractor_edit', { 'id': contractor.id }) }}">Edytuj</a>
        {{ form_start(delete_form) }}
        <input class="material-btn" type="submit" value="Usuń">
        {{ form_end(delete_form) }}
    {% endif %}
{% endblock %}
