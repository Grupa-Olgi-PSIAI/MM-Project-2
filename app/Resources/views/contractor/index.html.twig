{% extends 'base.html.twig' %}

{% block body %}
    <h1>Contractors list</h1>

    <table>
        <thead>
        <tr>
            <th>Name</th>
            <th>Vatid</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for contractor in contractors %}
            <tr>
                <td>{{ contractor.name }}</td>
                <td>{{ contractor.vatId }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('contractor_show', { 'id': contractor.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('contractor_edit', { 'id': contractor.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('contractor_new') }}">Create a new contractor</a>
        </li>
    </ul>
{% endblock %}
